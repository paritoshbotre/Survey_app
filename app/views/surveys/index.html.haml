- if flash[:notice]
  = flash[:notice]
%h3
  Listing Surveys
  %h5
  %table
    %tr
      %th
        Name
      %th
        Type
    - @surveys.each do |survey|
      %tr
        %td
          = survey.name
        %td
          = survey.survey_type
        %td
          = link_to "Show", survey_path(survey)
        %td
          = link_to "Edit", edit_survey_path(survey)
        %td
          = link_to "Delete", survey_path(survey), method: :delete, data: { confirm: "Are u sure ???"}

= link_to "New Survey", new_survey_path
