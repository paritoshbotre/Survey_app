- if flash[:notice]
  = flash[:notice]
%h3
  Listing Surveys
  %h3
    %table{:border => "1",:styles => "font-family: sans-serif"}
      %tr
        %th
          Name
        %th
          Type
        %th{:colspan => "3"}
          Actions
      - @surveys.each do |survey|
        %tr
          %td
            = survey.name
          %td
            = survey.survey_type
          %td
            = link_to "Show", survey_path(survey)
          %td
            = link_to "Edit", edit_survey_path(survey)
          %td
            = link_to "Delete", survey_path(survey), method: :delete, data: { confirm: "Are u sure ???"}

= link_to "New Survey", new_survey_path
